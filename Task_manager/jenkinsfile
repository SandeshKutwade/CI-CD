pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                dir('/var/lib/jenkins/workspace/First/Task_manager'){
                sh 'mvn clean package'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Run your tests here'
                // Add test steps
            }
        }
        stage('Docker_image'){
            steps {
                script{
                    dockerImage = docker.build('sandeshdockerhub/task_manager','-f /var/lib/jenkins/workspace/First/Task_manager/dockerfile /var/lib/jenkins/workspace/First/Task_manager')
                }
            }
        }
       
    }
}