pipeline {
    agent any
    tools{
        maven 'MAVEN_3.9.6'
    }
    stages {
        stage('Build') {
            steps {
                dir('/var/lib/jenkins/workspace/Fixing/Task_manager'){
                sh 'mvn clean package'
                }
            }
        }
         stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarCloud'
                    withSonarQubeEnv('SonarQube') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Run your tests here'
            }
        }
        stage('Docker_image'){
            steps {
                script{
                    dockerImage = docker.build('sandeshdockerhub/task_manager','-f /var/lib/jenkins/workspace/Fixing/Task_manager/src/dockerfile /var/lib/jenkins/workspace/Fixing/Task_manager')
                }
            }
        }
        // Then Run docker images command to see above image
       
    }   
}

