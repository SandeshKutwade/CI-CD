pipeline {
    agent any
    tools{
        maven 'MAVEN_3.9.6'
    }
    stages {
        stage('Build') {
            steps {
                dir('/var/lib/jenkins/workspace/Fixing/Task_manager'){
                sh 'mvn clean package'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv(credentialsId: 'FixingProject', installationName: 'SonarCloud') { // You can override the credential to be used
				sh '/opt/maven/bin/mvn clean package org.sonarsource.scanner.maven:sonar-maven-plugin:3.7.0.1746:sonar -D sonar.organization=<SandeshKutwade> -D sonar.projectKey=<sandeshkutwade123>'
                }
                junit testResults: '**/surefire-reports/*.xml'
                archive '**/target/spring-petclinic-*.jar'
                }
                }
            }
        
        stage('Test') {
            steps {
                echo 'Run your tests here'
            }
        }
        stage('Docker_image'){
            steps {
                script{
                    dockerImage = docker.build('sandeshdockerhub/task_manager','-f /var/lib/jenkins/workspace/Fixing/Task_manager/src/dockerfile /var/lib/jenkins/workspace/Fixing/Task_manager')
                }
            }
        }
        // Then Run docker images command to see above image
}
